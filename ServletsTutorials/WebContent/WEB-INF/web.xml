<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
	<display-name>ServletsTutorials</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
	<servlet>
		<servlet-name>LifeCycleMethodsExample</servlet-name>
		<servlet-class>com.madhav.LifeCycleMethodsExample</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LifeCycleMethodsExample</servlet-name>
		<url-pattern>/LifeCycleMethodsExample</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>LoadOnStartUpExample</servlet-name>
		<servlet-class>com.madhav.LoadOnStartUpExample</servlet-class>
		<!-- <load-on-startup>1</load-on-startup>-->
	</servlet>
	<servlet>
		<servlet-name>StudentRegistrationServlet</servlet-name>
		<servlet-class>com.madhav.StudentRegistrationServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>StudentRegistrationServlet</servlet-name>
		<url-pattern>/StudentRegistrationServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>LoadOnStartUpExample</servlet-name>
		<url-pattern>/LoadOnStartUpExample</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>GenericServletExample</servlet-name>
		<servlet-class>com.madhav.GenericServletExample</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>GenericServletExample</servlet-name>
		<url-pattern>/GenericServletExample</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>CourseRegistrationServlet</servlet-name>
		<servlet-class>com.madhav.CourseRegistrationServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>CourseRegistrationServlet</servlet-name>
		<url-pattern>/CourseRegistrationServlet</url-pattern>
	</servlet-mapping>
	<context-param>
		<param-name>driver</param-name>
		<param-value>oracle.jdbc.OracleDriver</param-value>
	</context-param>
	<context-param>
		<param-name>url</param-name>
		<param-value>jdbc:oracle:thin:@localhost:1521:orcl</param-value>
	</context-param>
	<context-param>
		<param-name>username</param-name>
		<param-value>crmuser</param-value>
	</context-param>
	<context-param>
		<param-name>password</param-name>
		<param-value>crmuser</param-value>
	</context-param>
</web-app>
